<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorRemainder"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remainderDatetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2020/12/24 Thu. 12:00"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/remainderContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ご飯を食べる"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/remainderTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="家" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/bt_update"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:background="@color/colorRemainder"
            android:src="@drawable/ic_create_black_24dp" />

        <ImageButton
            android:id="@+id/bt_trash"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorRemainder"
            android:src="@drawable/ic_delete_black_24dp"/>

        <Switch
            android:id="@+id/remainderComplete"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>