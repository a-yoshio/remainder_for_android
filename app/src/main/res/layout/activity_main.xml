<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6eaff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLabelInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="@string/title"
        android:textSize="25sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etInput"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:background="#ffffff"
            android:inputType="text"
            android:padding="10dp" />

        <Button
            android:id="@+id/btSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/mybutton"
            android:text="@string/bt_submit" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="550dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorRemainder"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2020/12/24 Thu. 12:00"
                        android:textColor="@color/colorRemainderText"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ご飯を食べる"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="家" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/bt_update"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="2dp"
                    android:background="@color/colorRemainder"
                    android:src="@drawable/ic_create_black_24dp" />

                <ImageButton
                    android:id="@+id/bt_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorRemainder"
                    android:src="@drawable/ic_delete_black_24dp" />

                <Switch
                    android:layout_width="19dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            style="@android:style/Widget.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_add_black_24dp" />
    </FrameLayout>
</LinearLayout>